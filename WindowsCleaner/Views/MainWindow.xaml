<Window x:Class="WindowsCleaner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:WindowsCleaner.Converters"
        xmlns:views="clr-namespace:WindowsCleaner.Views"
        mc:Ignorable="d"
        Title="Windows System Cleaner Pro"
        Height="700" 
        Width="1000"
        MinHeight="600" 
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <converters:Int32ToVisibilityConverter x:Key="Int32ToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="24">
        <TabControl Background="Transparent" BorderThickness="0">
            
            <!-- System Cleaner Tab -->
            <TabItem Header="ðŸ§¹ System Cleaner" FontSize="14" Padding="16,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Windows System Cleaner Pro" 
                                         FontSize="28" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Margin="0,0,0,8"/>
                                <TextBlock Text="Clean system files and optimize your Windows performance" 
                                         FontSize="16" 
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Total to clean: " 
                                         FontSize="14" 
                                         Foreground="{StaticResource TextSecondaryBrush}" 
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalSizeText}" 
                                         FontSize="16" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource PrimaryBrush}" 
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Main Content -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Action Buttons -->
                            <Grid Grid.Row="0" Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                         Text="Select categories to scan and clean:" 
                                         FontSize="16" 
                                         FontWeight="Medium" 
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         VerticalAlignment="Center"/>

                                <Button Grid.Column="1" 
                                      Content="Select All" 
                                      Style="{StaticResource ModernButton}" 
                                      Command="{Binding SelectAllCommand}"
                                      Margin="0,0,12,0"
                                      Padding="16,8"/>

                                <Button Grid.Column="2" 
                                      Content="Select None" 
                                      Style="{StaticResource ModernButton}" 
                                      Command="{Binding SelectNoneCommand}"
                                      Margin="0,0,12,0"
                                      Padding="16,8"/>

                                <Button Grid.Column="3" 
                                      Content="ðŸ” Scan System" 
                                      Style="{StaticResource ModernButton}" 
                                      Command="{Binding ScanCommand}"
                                      Padding="20,8"/>
                            </Grid>

                            <!-- Categories List -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding CleanupCategories}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceBrush}" 
                                                  BorderBrush="{StaticResource BorderBrush}" 
                                                  BorderThickness="1" 
                                                  CornerRadius="8" 
                                                  Padding="20" 
                                                  Margin="0,0,0,12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0" 
                                                            IsChecked="{Binding IsSelected}" 
                                                            Style="{StaticResource ModernCheckBox}"
                                                            VerticalAlignment="Top"
                                                            Margin="0,0,16,0"/>

                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" 
                                                                 FontSize="16" 
                                                                 FontWeight="SemiBold" 
                                                                 Foreground="{StaticResource TextPrimaryBrush}"
                                                                 Margin="0,0,0,4"/>
                                                        <TextBlock Text="{Binding DisplayText}" 
                                                                 FontSize="14" 
                                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                                 TextWrapping="Wrap"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="2" 
                                                              Orientation="Vertical" 
                                                              HorizontalAlignment="Right"
                                                              VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding FilesFound, StringFormat='{}{0:N0} files'}" 
                                                                 FontSize="12" 
                                                                 FontWeight="Bold" 
                                                                 Foreground="{StaticResource PrimaryBrush}"
                                                                 HorizontalAlignment="Right"
                                                                 Visibility="{Binding FilesFound, Converter={StaticResource Int32ToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Progress Section -->
                    <Border Grid.Row="2" 
                          Style="{StaticResource CardStyle}" 
                          Margin="0,24,0,0"
                          Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding StatusText}" 
                                     FontSize="14" 
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="0,0,0,12"/>
                            <ProgressBar Value="{Binding ProgressValue}" 
                                       Maximum="100" 
                                       Style="{StaticResource ModernProgressBar}"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Bar -->
                    <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,24,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="{Binding StatusText}" 
                                         FontSize="14" 
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         FontWeight="Medium"/>
                                <TextBlock Text="âš ï¸ Administrator privileges recommended for best results" 
                                         FontSize="12" 
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="ðŸ§¹ Clean Selected Files" 
                                      Style="{StaticResource SuccessButton}" 
                                      Command="{Binding CleanCommand}"
                                      IsEnabled="{Binding HasSelectedItems}"
                                      Padding="24,12"
                                      Margin="12,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Loading Overlay -->
                    <Grid Grid.RowSpan="4" Background="#80000000" 
                          Visibility="{Binding IsCleaning, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border Background="{StaticResource SurfaceBrush}" 
                              CornerRadius="12" 
                              Padding="40"
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ§¹" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Cleaning Files..." 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,16"/>
                                <TextBlock Text="{Binding StatusText}" 
                                         FontSize="14" 
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,16"/>
                                <ProgressBar Value="{Binding ProgressValue}" 
                                           Maximum="100" 
                                           Width="300" 
                                           Style="{StaticResource ModernProgressBar}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- File Explorer Tab -->
            <TabItem Header="ðŸ“‚ File Explorer" FontSize="14" Padding="16,8">
                <views:FileExplorerView/>
            </TabItem>

            <!-- Driver Updates Tab -->
            <TabItem Header="ðŸ”§ Driver Updates" FontSize="14" Padding="16,8">
                <views:DriverUpdatesView/>
            </TabItem>

            <!-- Windows Updates Tab -->
            <TabItem Header="ðŸ“¥ Windows Updates" FontSize="14" Padding="16,8">
                <views:WindowsUpdatesView/>
            </TabItem>
            
            <!-- Startup Programs Tab -->
            <TabItem Header="ðŸš€ Startup Programs" FontSize="14" Padding="16,8">
                <views:StartupProgramsView/>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="âš™ï¸ Settings" FontSize="14" Padding="16,8">
                <views:SettingsView/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
